// A launch configuration that compiles the extension and then opens it inside a new window
{
  "version": "2.0.0",
  "configurations": [
    {
      "name": "C++ test",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/dbgtest",
      "args": [],
      "stopAtEntry": true,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
          {
              "description": "Enable pretty-printing for gdb",
              "text": "-enable-pretty-printing",
              "ignoreFailures": true
          }
      ]
    },
    {
      "name": "Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${workspaceRoot}"],
      "stopOnEntry": false,
      "sourceMaps": true,
      "outFiles": ["${workspaceRoot}/out/src/**/*.js"],
      "preLaunchTask": "npm"
    },
    {
      "name": "ROS Debug Test",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": ["verbose:=true"],
      "stopOnEntry": false,
      "sourceMaps": true,
      "outFiles": ["${workspaceRoot}/out/src/**/*.js"],
      "preLaunchTask": "npm",
      "command": "roslaunch",
      "package": "dji_m100_gazebo",
      "target": "dji_empty_world.launch",
      "debugSettings": "{}",
      "debugServer": 4714
    },
    {
      "name": "Debugger",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/out/src/debugger/main.js",
      "args": ["--server=4714"],
      "stopOnEntry": false,
      "sourceMaps": true,
      "outFiles": ["${workspaceRoot}/out/src/**/*.js"],
      "preLaunchTask": "npm"
    },
    {
      "name": "Tests",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${workspaceRoot}", "--extensionTestsPath=${workspaceRoot}/out/test"],
      "stopOnEntry": false,
      "sourceMaps": true,
      "outFiles": ["${workspaceRoot}/out/test"],
      "preLaunchTask": "npm"
    }
  ],
  "compounds": [
    {
      "name": "Extension and Debugger",
      "configurations": ["Extension", "Debugger"]
    }
  ]
}
